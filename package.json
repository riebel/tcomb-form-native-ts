{
  "name": "@riebel/tcomb-form-native-ts",
  "version": "1.0.0",
  "description": "React Native forms powered by tcomb-validation. Modern TypeScript build with legacy-compatible API (drop-in replacement).",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "index.js"
  ],
  "type": "commonjs",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,json,md}\" --write",
    "format:check": "prettier \"**/*.{js,jsx,ts,tsx,json,md}\" --check",
    "test": "tsx test/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/riebel/tcomb-form-native-ts.git"
  },
  "author": "Hagen Sommerkorn <hagen.sommerkorn@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/riebel/tcomb-form-native-ts/issues"
  },
  "homepage": "https://github.com/riebel/tcomb-form-native-ts",
  "keywords": [
    "react-native",
    "forms",
    "tcomb",
    "validation",
    "typescript",
    "form",
    "ui",
    "drop-in",
    "compatibility"
  ],
  "contributors": [
    "Giulio Canti <giulio.canti@gmail.com>",
    "Hagen Sommerkorn <hagen.sommerkorn@gmail.com>"
  ],
  "maintainers": [
    "Hagen Sommerkorn <hagen.sommerkorn@gmail.com>"
  ],
  "dependencies": {
    "@react-native-picker/picker": "^2.11.1",
    "tcomb-validation": "^3.4.1"
  },
  "peerDependencies": {
    "@react-native-community/datetimepicker": ">=8.0.0",
    "react": ">=16.8 <20",
    "react-native": ">=0.64 <0.80"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@react-native-community/datetimepicker": "^8.4.4",
    "@types/react": "^19.1.10",
    "@eslint/eslintrc": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "react": "^19.1.1",
    "react-native": "^0.79.4",
    "@eslint/js": "^9.10.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-native": "^5.0.0",
    "globals": "^16.3.0",
    "mock-require": "^3.0.3",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "tape": "^5.6.6",
    "tsx": "^4.20.4",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
